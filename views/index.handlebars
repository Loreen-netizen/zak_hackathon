    <labelnk rel="stylesheet" href="./css/simple-grid.css">
    <title>Zakzuka!</title>
</head>

<body>
    <div class="container">


        <div class="row">
            <div class="col-12">
                <h1>Zakzuka</h1>
                <div class="col-6">
                    <button><a href="/viewcart">view cart</a></button>

                </div>
                  <div class="col-6">
                    <button><a href="/dashboard">view dashboard</a></button>

                </div>
            </div>

        </div>

            <div class="row">
                <div class="col-12">
                    
                    {{#each updateCart }}
                        <div class="col-3">
                            <h4>
                                 {{description}}   
                            </h4>
                            <strong>{{price}}</strong>

                            <form action="/cart" method="POST" >
                                <input type="hidden" name="productId" value="{{id}}" >
                                <button>add to cart</button>
                            </form>

                        </div>
                    {{/each}}

                </div>

            </div>

        
    </div>
    </div>
